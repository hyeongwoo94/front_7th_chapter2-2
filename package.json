{
  "name": "front-chapter2-2",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "type": "module",
  "scripts": {
    "dev": "pnpm -F @hanghae-plus/shopping dev",
    "build": "pnpm run -r build",
    "lint:fix": "eslint --fix",
    "prettier:write": "prettier --write ./packages/*/src",
    "preview": "vite preview",
    "test": "pnpm -F @hanghae-plus/react test",
    "test:basic": "pnpm -F @hanghae-plus/react test:basic",
    "test:advanced": "pnpm -F @hanghae-plus/react test:advanced",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "test:generate": "playwright codegen localhost:5173",
    "prepare": "husky",
    "gh-pages": "pnpm -F @hanghae-plus/shopping build && gh-pages -d ./packages/app/dist"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@babel/plugin-transform-react-jsx": "7.27.1",
    "@eslint/js": "9.30.1",
    "@playwright/test": "1.54.1",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.0.13",
    "@vitejs/plugin-react": "4.6.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.30.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.5.1",
    "gh-pages": "6.3.0",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "prettier": "3.6.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0",
    "vite": "npm:rolldown-vite@7.0.9",
    "vitest": "3.2.4"
  }
}
